<section class="page-section cta">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <div class="countdown-container">
          <p class="h1">Share Your Slogan!</p>
          <p class="text-faded">Pedal Your Creativity</p>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="container-fluid p-0 mb-2">
  <div class="form-container p-5">
    <h1 class="text-center pb-4">Share Your Slogan for the Boulder Bike Race!</h1>
    <%= form_with(model: @contest, local: true, id: "form") do |form| %>
      <div class="form-group">
        <%= form.label :fname, "First Name:" %>
        <%= form.text_field :fname, class: "form-control" %>
        <% if @contest.errors[:fname].any? %>
          <span class="text-danger">*<%= @contest.errors[:fname][0] %></span>
        <% end %>
      </div>
      <div class="form-group">
        <%= form.label :lname, "Last Name:" %>
        <%= form.text_field :lname, class: "form-control" %>
        <% if @contest.errors[:lname].any?%>
          <span class="text-danger">*<%= @contest.errors[:lname][0] %></span>
        <% end %>
      </div>
      <div class="form-group">
        <%= form.label :email, "Email:" %>
        <%= form.email_field :email, class: "form-control" %>
        <% if @contest.errors[:email].any? %>
          <span class="text-danger">*<%= @contest.errors[:email][0] %></span>
        <% end %>
      </div>
      <div class="form-group">
        <%= form.label :slogan, "Slogan:" %>
        <%= form.text_area :slogan, class: "form-control" %>
        <% if @contest.errors[:slogan].any? %>
          <span class="text-danger">*<%= @contest.errors[:slogan][0] %></span>
        <% end %>
      </div>
      <%= form.submit "Submit", class: "btn btn-primary w-100" %>
    <% end %>

  </div>
</div>



<% content_for :page_specific_js do %>
  <% if @contest.errors.any? %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const formElement = document.querySelector('#form');
            formElement.scrollIntoView({ behavior: 'smooth' });
        });
    </script>
  <% end %>
<% end %>